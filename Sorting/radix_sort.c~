#include<stdio.h>
#include<math.h>
const int max_length=100;
void *init(int *a,int n) //initialise an array a of size n with 0
{
  int i;
  for(i=0;i<n;i++)
    a[i]=0;
}
int *count_sort(int *a,int *b,int pos,int n) // a is the input array while b is the output array
{
  int count[10],i;
  init(count,10);
  for(i=0;i<n;i++)
    {
      count[(a[i]/pow(10,i))%10]++;
    }
  for(i=1;i<10;i++)
    {
      count[i]=count[i]+count[i-1];
    }
  for(i=n-1;i>=0;i--)
    {
      b[count[(a[i]/pow(10,i))%10]-1]=a[i];
      count[(a[i]/pow(10,i))]%10--;
    }
  return b;
}	  





int main()
{
  int n,a[max_length]; //max_length numbers
  int i;
  printf("Enter the number of numbers ");
  scanf("%d",&n);
  for(i=0;i<n;i++)
    {
      printf("Enter the number ");
      scanf("%d",&a[i]);
    }
  //as our size is max_length we can iterate for a max of log(n) to the base 10
  i=0;
  int b[max_length]; //the max array
  while(i<ceil(log(n)/log(10)))
    {
      i++;
      a=count_sort(a,b,i,n);
    }
  printf("\nThe output array is \n");
  for(i=0;i<n;i++)
    printf("%d ",a[i]);
  return 0;
}


